{% extends 'base.html.twig' %}

{% block title %}Liste des contributions{% endblock %}

{% block body %}
    <section class="container">
        <h1>Liste des contributions</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Texte</th>
                <th>Chapitre</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for sentence in sentences %}
                <tr>
                    <td>{{ sentence.id }}</td>
                    <td>{{ sentence.text }}</td>
                    <td>{{ sentence.chapter.number }}</td>
                    <td>
                        <a href="{{ path('sentence_show', {'id': sentence.id}) }}">Voir</a>
                        <a href="{{ path('sentence_edit', {'id': sentence.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune contribution n'est enregistr√©e</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('sentence_new') }}">Ajouter une contributuion</a>
    </section>
{% endblock %}
