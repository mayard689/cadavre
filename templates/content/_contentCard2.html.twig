<div class="card {{ width??'col-sm-12 col-md-6' }}">
    <img class="card-img" src="/pictures/content/{{ content.picture ?? 'emptyContentPicture.jpg' }}" alt="{{content.title}} illustration">
    <div class="card-img-category">
        <a href="#" class="btn btn-light btn-sm">{{content.category.name}}</a>
    </div>
    <div class="card-body">
        <div class="views">{{content.date|date("d M Y h:i", "Europe/Paris")}}</div>
        <h4 class="card-title">{{content.title}}</h4>
        <p class="card-text">{{content.text|u.truncate(125)}}...</p>
        <div class="button-panel">
            {% include 'tools/_seeButton.html.twig' with {
                'text': 'Voir l\'article',
                'path': path('content_show', {'id': content.id})
            } %}

            {% include 'tools/_adminButton.html.twig' with {
                'text': 'Modifier',
                'path': path('content_edit', {'id': content.id})
            } %}

            {% include 'tools/_adminButton.html.twig' with {
                'text': 'Envoyer cet article aux abonnés par email',
                'path': path('content_notify', {'id': content.id})
            } %}
        </div>
    </div>
</div>
