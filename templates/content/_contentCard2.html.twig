<div class="content-card {{ width??'col-sm-12 col-md-6' }}">
    <div class="picture-wrapper">
        <img class="content-picture" src="/pictures/content/{{ content.picture ?? 'emptyContentPicture.jpg' }}" alt="Card image cap">
    </div>

    <div class="body">
        <h2 class="content-title">{{content.title}}</h2>
        <p class="content-text">{{content.text|u.truncate(125)}}...</p>
    </div>

    <div class="button-panel">
        {% include 'tools/_seeButton.html.twig' with {
            'text': 'Voir l\'article',
            'path': path('content_show', {'id': content.id})
        } %}

        {% include 'tools/_adminButton.html.twig' with {
            'text': 'Modifier',
            'path': path('content_edit', {'id': content.id})
        } %}

        {% include 'tools/_adminButton.html.twig' with {
            'text': 'Envoyer cet article aux abonn√©s par email',
            'path': path('content_notify', {'id': content.id})
        } %}
    </div>

</div>
