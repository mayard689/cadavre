{% extends 'base.html.twig' %}

{% block title %}Liste des Newsletters{% endblock %}

{% block body %}
    <section class="container">
        <h1>Liste des Newsletters</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Objet</th>
                    <th>Texte</th>
                    <th>Aux membres</th>
                    <th>Aux professionnels</th>
                    <th>Aux particuliers</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for newsletter in newsletters %}
                <tr>
                    <td>{{ newsletter.id }}</td>
                    <td>{{ newsletter.subject }}</td>
                    <td>{{ newsletter.text }}</td>
                    <td>{{ newsletter.toMembers ? 'Oui' : 'Non' }}</td>
                    <td>{{ newsletter.toProfessionals ? 'Oui' : 'Non' }}</td>
                    <td>{{ newsletter.toPersons ? 'Oui' : 'Non' }}</td>
                    <td>
                        <a href="{{ path('newsletter_show', {'id': newsletter.id}) }}">Voir</a>
                        <a href="{{ path('newsletter_edit', {'id': newsletter.id}) }}">Modifier</a>
                        <a href="{{ path('newsletter_test', {'id': newsletter.id}) }}">Tester</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucune newsletter n'est enregsitr√©e</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('newsletter_new') }}">Creer une newsletter</a>
    </section>
{% endblock %}
