{% extends 'base.html.twig' %}

{% block title %}Liste des images{% endblock %}

{% block body %}
    <section class="container">
        <h1>Liste des images</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Texte Alt</th>
                    <th>Fichier</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for picture in pictures %}
                <tr>
                    <td>{{ picture.id }}</td>
                    <td>{{ picture.name }}</td>
                    <td>{{ picture.alt }}</td>
                    <td>{{ picture.picture }}</td>
                    <td>
                        <a href="{{ path('picture_show', {'id': picture.id}) }}">Voir</a>
                        <a href="{{ path('picture_edit', {'id': picture.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune image n'est actuellement enregistr√©e</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('picture_new') }}">Ajouter une image</a>
    </section>
{% endblock %}
