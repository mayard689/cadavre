{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <section class="container">
        <h1>Image</h1>

        <div class="main-picture-wrapper container">
            <img class="main-picture" src="/pictures/picture/{{ picture.picture ?? 'emptyContentPicture.jpg' }}" alt="{{ picture.alt }}">
        </div>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ picture.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ picture.name }}</td>
                </tr>
                <tr>
                    <th>Alt</th>
                    <td>{{ picture.alt }}</td>
                </tr>
                <tr>
                    <th>File</th>
                    <td>{{ picture.picture }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('picture_index') }}">Revenir Ã  la liste des images</a>

        <a href="{{ path('picture_edit', {'id': picture.id}) }}">Modifier</a>

        {{ include('picture/_delete_form.html.twig') }}
    </section>
{% endblock %}
