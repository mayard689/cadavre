{% extends 'cadavre-base.html.twig' %}

{% block title %}La mystérieuse Carotarêve{% endblock %}

{% block body %}
    <div class="container">
        <h1>Chapitre {{ chapter.number }} : {{ chapter.title }}</h1>

        <a class="btn btn-lg btn-primary mt-5" href=""{{ path('home') }}> Revenir à l'accueil </a>


        <section class="previous">
            <h2 class="summary">Résumé de ce qu'il s'est passé avant</h2>
            <p class="introduction">{{ chapter.introduction }}</p>
        </section>

        <section class="next">

            <h2>Poursuivez cet extrait du texte</h2>

            <p>[ Texte caché ...] </p>

            {%  set noprevious = 'Comment dire ... hum hum... vous découvrez que vous êtes en fait le premier joueur et qu\'il n\'y a encore jamais eu de joueur précédent. A vous d\'ouvrir le bal !' %}
            <p class="user-entry"><quote>{{ previous.previous.text??'' }}</quote></p>
            <p class="user-entry"><quote>{{ previous.text??noprevious }}</quote></p>


            {{ form_start(form) }}
                <p class="mt-5">Racontez ce qu'il se passe ensuite dans le cadre ci dessous :</p>

                <div class="form-group w-100 h-100">
                    {{ form_widget(form.text, { 'attr': {'class': 'text'} }) }}
                    {{ form_errors(form.text) }}
                </div>

                <div class="form-group w-100 h-100">
                    {{ form_label(form.pseudo) }}
                    {{ form_widget(form.pseudo) }}

                </div>

                <div class="form-group d-flex justify-content-center">
                    <button class="btn btn-lg btn-primary"> Enregistrer </button>
                </div>
            {{ form_end(form) }}

        </section>
    </div>
{% endblock %}
