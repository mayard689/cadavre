{% extends 'cadavre-base.html.twig' %}

{% block title %}Réglisse au Pays des Vermeils!{% endblock %}

{% block body %}

    <div class="container">
        <h1>Réglisse au Pays des Vermeils!</h1>
        <p class="h1-sub">Un cadavre Exquis avec le <span class="cdf">Comité des Fêtes de Villereau</span></p>
    </div>

        <section class="previous container">
            <h2 class="summary">Résumé des chapitres précédents</h2>
            <p class="introduction">{{ chapter.introduction }}</p>
        </section>

        <section class="next container">

            <h2>Chapitre {{ chapter.number }} : {{ chapter.title }}</h2>

            <p>[ Texte caché ...] </p>

            {% for sentence in sentences %}
                <p class="user-entry">Un précédent joueur a écrit : <quote>{{ sentence.text }}</quote></p>
            {% else %}
                <p>Comment dire ... hum hum... vous découvrez que vous êtes en fait le premier joueur et qu'il n'y a encore jamais eu de joueur précédent. A vous d'ouvrir le bal !</p>
            {% endfor %}



            {{ form_start(form) }}
                <p>A vous de raconter ci dessous ce qu'il se passe ensuite</p>

                <div class="form-group w-100 h-100">
                    {{ form_widget(form.text, { 'attr': {'class': 'text'} }) }}
                    {{ form_errors(form.text) }}
                </div>

                <div class="form-group d-none">
                    {{ form_widget(form.chapter) }}
                    {{ form_errors(form.chapter) }}
                </div>

                <div class="form-group justify-content-center">
                    <button class="btn btn-lg btn-primary"> Enregistrer </button>
                </div>
            {{ form_end(form) }}
        </section>



    </div>


{% endblock %}
