{# according to tutorial  https://css-tricks.com/creating-a-modal-image-gallery-with-bootstrap-components/ #}
{# need the bootstrapGallery.scss file #}


{% set videoTypeList = ['webm', '.mp4'] %}
{% set audioTypeList = ['.mp3'] %}

<div class="row" id="gallery" data-toggle="modal" data-target="#CarouselModal">
    {% for picture in pictures %}
        <div class="col-6 col-sm-4 col-md-3 col-lg-3">
            {% set type = picture[-4:] %}
            {%  if type in videoTypeList %}
                <video class="video w-100 mt-2 mb-2" data-target="#carouselModal" data-slide-to="{{loop.index0}}" disableremoteplayback="" poster="" preload="auto" data-object-fit="" autoplay="" playsinline="" muted="" loop="" data-was-processed="true">
                    <!-- Source vidéo par défaut -->
                    <source type="video/webm" src="{{picture}}" media="(orientation: landscape)">
                </video>
            {% elseif type in audioTypeList %}
                <audio class="w-100 mt-2 mb-2" data-target="#carouselModal" data-slide-to="{{loop.index0}}" controls src="{{picture}}">
                    Your browser does not support the <code>audio</code> element.
                </audio>
            {% else %}
                <img class="w-100 mt-2 mb-2" src="{{picture}}" data-target="#carouselModal" data-slide-to="{{loop.index0}}">
            {% endif %}
        </div>
    {% endfor %}
</div>

<!-- Modal markup: https://getbootstrap.com/docs/4.4/components/modal/ -->
<div class="modal fade" id="CarouselModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">{{ title }}</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

                <!-- Carousel markup: https://getbootstrap.com/docs/4.4/components/carousel/ -->
                <div id="carousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        {% for picture in pictures %}
                            <div class="carousel-item
                                {% if loop.index0 == 0 %} active {% endif %}
                            ">
                                {% set type = picture[-4:] %}
                                {%  if type in videoTypeList %}
                                    <video class="video d-block w-100 h-100" disableremoteplayback="" poster="" preload="auto" data-object-fit="" autoplay="" playsinline="" muted="" loop="" data-was-processed="true">
                                        <!-- Source vidéo par défaut -->
                                        <source type="video/webm" src="{{picture}}" media="(orientation: landscape)">
                                    </video>
                                {% elseif type in audioTypeList %}
                                    <figcaption>Ecoutez {{ picture }}</figcaption>
                                    <audio class="w-100 mt-2 mb-2" data-target="#carouselModal" data-slide-to="{{loop.index0}}" controls src="{{picture}}">
                                        Your browser does not support the <code>audio</code> element.
                                    </audio>
                                {% else %}
                                    <img class="d-block w-100 h-100" src="{{picture}}">
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                    <a class="carousel-control-prev d-none" href="#carousel" role="button" data-slide="prev">
                        <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-arrow-left-square m-3" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                            <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"/>
                        </svg>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next d-none" href="#carousel" role="button" data-slide="next">
                        <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-arrow-right-square m-3" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                            <path fill-rule="evenodd" d="M4 8a.5.5 0 0 0 .5.5h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5A.5.5 0 0 0 4 8z"/>
                        </svg>

                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="control-buttons">
                <a class="d-flex justify-content-around carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                    <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-arrow-left-square m-3" fill="dark-blue" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                        <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"/>
                    </svg>
                </a>
                <a class="d-flex justify-content-around carousel-control-next" href="#carousel" role="button" data-slide="next">
                    <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-arrow-right-square m-3" fill="dark-blue" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                        <path fill-rule="evenodd" d="M4 8a.5.5 0 0 0 .5.5h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5A.5.5 0 0 0 4 8z"/>
                    </svg>
                </a>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
