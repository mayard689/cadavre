{% extends 'base.html.twig' %}

{% block title %}Liste des chapitres{% endblock %}

{% block body %}
    <section class="container">
        <h1>Liste des chapitres</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Numéro</th>
                <th>Titre</th>
                <th>Introduction</th>
                <th>Conclusion</th>
                <th>Code</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for chapter in chapters %}
                <tr>
                    <td>{{ chapter.number }}</td>
                    <td>{{ chapter.title }}</td>
                    <td>{{ chapter.introduction }}</td>
                    <td>{{ chapter.conclusion }}</td>
                    <td>{{ chapter.code }}</td>
                    <td>
                        <a href="{{ path('chapter_show', {'id': chapter.id}) }}">Voir</a>
                        <a href="{{ path('chapter_edit', {'id': chapter.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun chapitre n'est enregistréd</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('chapter_new') }}">Ajouter un onuveau chapitre</a>
    </section>

{% endblock %}
