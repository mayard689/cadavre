<!-- Modal -->
<div class="modal fade" id="newsletterModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Recevoir la newsletter</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                {{ form_start(newsletterForm) }}

                <div class="form-group row">
                    <label class="col-sm-12 text-left" for="newsletter_email_email">Merci d'indiquer votre email ci dessous pour être informé des prochaines publications. </label>
                    <div class="col-sm-12 col-md-6">{{ form_widget(newsletterForm.email, {'attr': {'class': 'w-100'}}) }}</div>
                    <div class="col-12">{{ form_errors(newsletterForm.email) }}</div>
                </div>

                <button type="button" class="btn btn-primary btn-sm mt-2" data-dismiss="modal" aria-label="Close">
                    Annuler
                </button>

                {% include 'tools/_formAnonymValidateButton.html.twig' with {
                    'text': 'Valider',
                    'path': path('newsletter_subscription')
                } %}

                {{ form_end(newsletterForm) }}

            </div>
        </div>
    </div>
</div>
